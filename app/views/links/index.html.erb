<h1>Listing links</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%= link.name %></td>
    <td><%= link.url %></td>
    <td><%= link_to 'Show', category_link_path(@category, link) %></td>
    <td><%= link_to 'Edit', edit_category_link_path(@category, link) %></td>
    <td><%= link_to 'Destroy', [@category, link], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

